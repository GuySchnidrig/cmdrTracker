                <TextView
                    android:id="@+id/player2Time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:textColor="#f1e6b2"
                    android:textSize="14sp"
                    android:layout_marginStart="16dp"/>

            </LinearLayout>

            <!-- Container for Life Count and Buttons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:gravity="center">

                <Button
                    android:id="@+id/player2Minus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/player2Life"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:gravity="center"
                    android:text="@string/starting_life"
                    android:textColor="#f1e6b2"
                    android:textSize="60sp" />

                <Button
                    android:id="@+id/player2Plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- DeckName -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/player2Deck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginEnd="18dp"
                    android:textColor="#f1e6b2"
                    android:textSize="14sp" />


            </LinearLayout>
        </LinearLayout>

        <!-- Player 3 Tile -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="4dp"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#6D597A"
            android:padding="8dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1">

            <LinearLayout
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="0dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/player3Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Player 3"
                    android:textColor="#f1e6b2"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/player3Time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:textColor="#f1e6b2"
                    android:textSize="14sp"
                    android:layout_marginStart="16dp"/>

            </LinearLayout>

            <!-- Container for Life Count and Buttons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:gravity="center">

                <Button
                    android:id="@+id/player3Minus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/player3Life"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:gravity="center"
                    android:text="@string/starting_life"
                    android:textColor="#f1e6b2"
                    android:textSize="60sp" />

                <Button
                    android:id="@+id/player3Plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
