                    android:textColor="#f1e6b2"
                    android:textSize="14sp" />


            </LinearLayout>
        </LinearLayout>

        <!-- Player 4 Tile -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_margin="4dp"
            android:gravity="center"
            android:background="#4ca9bf"
            android:padding="8dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1">

            <LinearLayout
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="0dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/player4Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Player 4"
                    android:textColor="#f1e6b2"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/player4Time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:textColor="#f1e6b2"
                    android:textSize="14sp"
                    android:layout_marginStart="16dp"/>

            </LinearLayout>

            <!-- Container for Life Count and Buttons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:gravity="center">

                <Button
                    android:id="@+id/player4Minus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/player4Life"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:gravity="center"
                    android:text="@string/starting_life"
                    android:textColor="#f1e6b2"
                    android:textSize="60sp" />

                <Button
                    android:id="@+id/player4Plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- DeckName -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/player4Deck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginEnd="18dp"
                    android:textColor="#f1e6b2"
                    android:textSize="14sp" />


            </LinearLayout>
        </LinearLayout>

    </androidx.gridlayout.widget.GridLayout>
    <!-- Overlay Button -->


    <TextView
        android:id="@+id/overallTurnCountTextView"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_margin="14dp"
        android:text="Turn: "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.02"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.05"
        android:textColor="#f1e6b2"
        android:textSize="30sp" />

    <Button
        android:id="@+id/passTurnButton"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:text="Pass Turn"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        android:elevation="0dp"
        />

    <Button
        android:id="@+id/endGameButton"
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:textSize="8sp"
        android:text="End"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.02"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.98"
        android:elevation="0dp"
        android:backgroundTint="@color/main_grey"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
